#!/bin/bash -eu

# EWID
LOGLEVEL=${LOGLEVEL=W}

log() {
	ll=$1
	if [ $LOGLEVEL == I ]; then
		if [[ "D" == *$ll* ]]; then
			return
		fi
	elif [ $LOGLEVEL == W ]; then
		if [[ "DI" == *$ll* ]]; then
			return
		fi
	elif [ $LOGLEVEL == E ]; then
		if [[ "DIW" == *$ll* ]]; then
			return
		fi
	fi
	echo $@
}
if [ -e $(dirname "$0")/config.$HOSTNAME ]; then
	source $(dirname "$0")/config.$HOSTNAME
else
	source $(dirname "$0")/config
fi

[ -z $CP ] && export CP=cp
[ -z $STAT ] && export STAT=stat
[ -z $MKDIR ] && export MKDIR=mkdir

if [ ! -f "$1" ]; then
	echo $1 is no file!
	exit 1
fi

if [ ${1:0:1} == '/' ]; then
	dir=$(dirname "$1")
	file=$(basename "$1")
else
	mf=$PWD/$1
	dir=$(dirname "$mf")
	file=$(basename "$mf")
fi

$MKDIR -pv $DATA/$dir/$file

target=$DATA/$dir/$file/$HOSTNAME

$CP -v $1 $target

$STAT -c "%U:%G %a" $1 > $DATA/$dir/$file/file-mode

chmod 644 $target

cd $DATA

git add ./$dir/$file/$HOSTNAME
git add ./$dir/$file/file-mode

git commit -a -m "Autocommit: yacsified $dir/$file;"
